<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsShow">


    <TextView
        android:id="@+id/displayInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        android:layout_centerHorizontal="true">

    </TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DetailsShow_UpdateButton"
        android:text="Update Info"
        android:layout_below="@+id/displayInfo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:backgroundTint="#EE4CB16E"
        >
    </Button>

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DetailsShow_UpdateButton"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:backgroundTint="#EE4CB16E"
        android:text="Delete Info"></Button>

    <Button
        android:id="@+id/DetailsShow_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delete"
        android:layout_marginTop="33dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:backgroundTint="#EE4CB16E"
        android:text="HOME"></Button>
</RelativeLayout>